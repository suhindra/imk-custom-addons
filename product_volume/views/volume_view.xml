<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <record id="view_ptoduct_template_volume" model="ir.ui.view">
            <field name="name">product.template.volume</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_template_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_lots_and_weight']" position="replace">
                    <group string="Logistics" name="group_lots_and_weight" attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}">
                        <label for="join"/>
                        <div class="o_row" name="join">
                            <field name="join"/>
                        </div>
                        <label for="flute"/>
                        <div class="o_row" name="flute">
                            <field name="flute"/>
                        </div>

                        <label for="length"/>
                        <div class="o_row" name="length">
                            <field name="length"/>
                        </div>
                        <label for="breadth"/>
                        <div class="o_row" name="breadth">
                            <field name="breadth"/>
                        </div>
                        <label for="height"/>
                        <div class="o_row" name="height">
                            <field name="height"/>
                        </div>
                        <label for="kw1"/>
                        <div class="o_row" name="kw1">
                            <field name="kw1"/>
                        </div>
                        <label for="kw2"/>
                        <div class="o_row" name="kw2">
                            <field name="kw2"/>
                        </div>
                        <label for="kw3"/>
                        <div class="o_row" name="kw3">
                            <field name="kw3"/>
                        </div>
                        <label for="kw4"/>
                        <div class="o_row" name="kw4">
                            <field name="kw4"/>
                        </div>
                        <label for="kw5"/>
                        <div class="o_row" name="kw5">
                            <field name="kw5"/>
                        </div>
                        <label for="weight"/>
                        <div class="o_row" name="weight">
                            <field name="weight"/>
                            <span>kg</span>
                        </div>
                        <label for="wide"/>
                        <div class="o_row" name="wide">
                            <field name="wide"/>
                            <span>mm</span>
                        </div>
                        <label for="inner_size"/>
                        <div class="o_row" name="inner_size">
                            <field name="inner_size"/>
                            <span>mm</span>
                        </div>
                        <label for="volume"/>
                        <div class="o_row" name="volume">
                            <field name="volume" />
                            <span>mmÂ³</span>
                        </div>
                    </group>
                    <group string="Manufacture Process" name="group_manufacture_process" attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}">
                        <label string='Manufacture Process'/>
                        <div class="o_row" name="manufacture_process">
                            <field name="slitter"/>
                            <field name="slotter"/>
                            <field name="die_cut"/>
                            <field name="cetak"/>
                            <field name="glue"/>
                            <field name="stitching"/>
                        </div>
                    </group>
                </xpath>
            </field>
       </record>
    </data>
</odoo>